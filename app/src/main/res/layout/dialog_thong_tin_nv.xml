<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bgaddban"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="24dp"
            android:text="Thông tin nhân viên"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/ibtn_order_thoat"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_close" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_dialog_nv"
                    android:src="@drawable/bg_avatar"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="10dp"
                    app:riv_border_width="2dp"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_tenNV"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:text="Nguyễn Hoàng Quang"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:text="NS :"

                        android:textColor="@color/black"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/txt_namSinh"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="02/02/2000"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:text="GT :"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt_gioiTinh"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="Nam"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Địa Chỉ :"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/txt_diachi"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:text="Phước Hiệp , Tuy Phước , Bình Định"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:text="Phone :"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="200dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="0961379812"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Email :"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:text="hoangquanglhu@gmail.com"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:text="Chức Vụ :"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/txt_chuVu"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:text="Nhân Viên"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:text="Tài Khoản :"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txt_tk"
                        android:layout_width="177dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Quang02"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mật Khẩu :"
                        android:gravity="center"

                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txt_pass"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*******"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ic__eye_24" />


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_no"
                    android:text="Xóa" />

                <Button
                    android:id="@+id/btn_sua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/bg_btn_yes"
                    android:text="Sửa" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>