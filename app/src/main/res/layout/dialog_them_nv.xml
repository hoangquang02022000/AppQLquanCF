<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bgaddban"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="258dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="Thêm nhân Viên "
                android:textColor="@color/white"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ibtn_addnv_thoat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_close" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="132dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_addNV"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_camera"
                android:scaleType="centerCrop"
                app:riv_border_color="@color/black"
                app:riv_border_width="1dp"
                app:riv_corner_radius="10dp"
                app:riv_mutate_background="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_add_tenNV"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:background="@drawable/custom_edittext"
                android:hint="Nhập Tên Nhân Viên"
                android:textColor="@color/xam"
                android:textColorHint="@color/xam"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Chức Vụ : "
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_quanLy"
                        android:layout_width="93dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:buttonTint="@color/black"
                        android:text="Quản Lý"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <RadioButton
                        android:id="@+id/rb_nhaVien"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:buttonTint="@color/black"
                        android:checked="true"
                        android:text="Nhân Viên"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Giới Tính : "
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_nam"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="Nam"
                        android:textSize="12dp"
                        android:textColor="@color/black"
/>

                    <RadioButton
                        android:id="@+id/rb_nu"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:buttonTint="@color/black"
                        android:text="Nữ"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/txt_add_ns"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:background="@drawable/custom_edittext"
                android:hint="Nhập Ngày Sinh"
                android:textColor="@color/xam"
                android:textColorHint="@color/xam"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/txt_add_sdt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:background="@drawable/custom_edittext"
                android:hint="Số điện thoại"
                android:textColor="@color/xam"
                android:textColorHint="@color/xam"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/txt_add_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edittext"
                android:hint="Email"
                android:textAlignment="center"
                android:textColor="@color/xam"
                android:textColorHint="@color/xam"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/txt_add_mk"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edittext"
                android:hint="Mật Khẩu"
                android:password="true"
                android:textAlignment="center"
                android:textColor="@color/xam"
                android:textColorHint="@color/xam"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/txt_add_diachi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:background="@drawable/custom_edittext"
                android:hint="Địa Chỉ"
                android:textColor="@color/xam"
                android:textColorHint="@color/xam"
                android:textSize="12dp" />



        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add_nv"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/bobtnlogin"
            android:text="Thêm"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar_addnv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />


</LinearLayout>