<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bgaddban"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="303dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thêm nhân Viên "
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibtn_addnv_thoat"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_close" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_addNV"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:background="@android:drawable/ic_menu_report_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_add_tenNV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Nhập Tên Nhân Viên"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Chức Vụ : "
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_quanLy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:buttonTint="@color/black"
                        android:text="Quản Lý"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rb_nhaVien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:buttonTint="@color/black"
                        android:text="Nhân Viên"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Giới Tính : "
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_nam"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="Nam"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rb_nu"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:buttonTint="@color/black"
                        android:text="Nữ"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/txt_add_ns"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:hint="Nhập Ngày Sinh"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_add_sdt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:hint="Số điện thoại"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_add_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_add_diachi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:hint="Địa Chỉ"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_add_tk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:hint="Tài Khoảng"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_add_mk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:hint="Mật Khẩu"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add_nv"
            android:layout_marginTop="-10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bobtnlogin"
            android:text="Thêm"
            android:textColor="@color/white" />
    </LinearLayout>>


</LinearLayout>