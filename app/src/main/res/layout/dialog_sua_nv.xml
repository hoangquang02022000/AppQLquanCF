<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bgaddban"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="251dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="Thông tin nhân viên"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:id="@+id/ibtn_ttnv_thoat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_close" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xam"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/bg_linner_thongtinnv">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_dialog_nv_edit"
                    android:src="@drawable/bg_avatar"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="10dp"
                    app:riv_border_width="2dp"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    android:layout_height="80dp"
                    android:layout_width="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etxt_tenNV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nguyễn Hoàng Quang"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/bg_linner_thongtinnv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Năm Sinh:"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <EditText
                            android:gravity="center"
                            android:id="@+id/etxt_namSinh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="02/02/2000"
                            android:textColor="@color/xam"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Giới Tính:"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <EditText
                            android:gravity="center"
                            android:id="@+id/etxt_gioiTinh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Nam"
                            android:textColor="@color/xam"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Địa Chỉ :"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/etxt_diachi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Phước Hiệp , Tuy Phước , Bình Định"
                            android:textColor="@color/xam"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Phone :"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <EditText
                            android:gravity="center"
                            android:id="@+id/etxt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0961379812"
                            android:textColor="@color/xam"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Email :"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:gravity="center"
                                android:id="@+id/etxt_email"
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:text="hoangquanglhu@gmail.com"
                                android:textColor="@color/xam"
                                android:textSize="12dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/black"/>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Chức Vụ :"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <EditText
                            android:gravity="center"
                            android:id="@+id/etxt_chuVu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Nhân Viên"
                            android:textColor="@color/xam"
                            android:textSize="12dp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Mật Khẩu :"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/etxt_pass"
                                android:layout_width="180dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:inputType="textPassword"
                                android:text="......"
                                android:textColor="@color/xam"
                                android:textSize="12dp" />
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/black"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic__eye_24" />
                        </LinearLayout>




                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/bg_linner_thongtinnv"
            android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:textSize="12dp"
                    android:id="@+id/btn_Sua_"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:background="@drawable/bobtnlogin"
                    android:textColor="@color/white"
                    android:text="Sửa" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>