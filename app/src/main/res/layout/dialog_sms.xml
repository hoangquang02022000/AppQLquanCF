<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bgaddban">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Mã Xác Thưc"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xam"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="116dp"
            android:gravity="center">

            <EditText
                android:id="@+id/editTextNumberDecimal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bogo_pin"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTextNumberDecimal2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bogo_pin"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTextNumberDecimal5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:background="@drawable/bogo_pin"/>

            <EditText
                android:id="@+id/editTextNumberDecimal3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:background="@drawable/bogo_pin"/>

            <EditText
                android:id="@+id/editTextNumberDecimal4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:background="@drawable/bogo_pin"/>

            <EditText
                android:id="@+id/editTextNumberDecimal6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:background="@drawable/bogo_pin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_xacnhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#06A60C"
                android:text="Xác Nhận"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>