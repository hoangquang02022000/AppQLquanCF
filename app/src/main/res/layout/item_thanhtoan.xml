<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imgsp_thanhtoan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_tenSP_thanhtoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tra Sua"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/xam"
                android:text="Size"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/txt_size_thanhtoan"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/xam"
                android:text="M" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/xam"
                android:text="Số Lượng"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/txt_sl_thanhtoan"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/xam"
                android:text="1" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_gia_thanhtoan"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="15.000"
                android:textColor="#FA0303"
                android:textSize="20dp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FA0303"
                android:text="đ" />
        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>