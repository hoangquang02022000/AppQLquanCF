<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainBan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/color_backgroud"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_troveQLB"
            android:layout_width="53dp"
            android:layout_height="43dp"
            android:background="@drawable/ic_back"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/ten_Ban"
            android:layout_width="341dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Tên Bàn"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">
        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:orientation="vertical"
                android:gravity="center">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tab_All"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <include layout="@layout/tab_all"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_coffee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <include layout="@layout/tab_coffe"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_milkTea"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <include layout="@layout/tab_milktea"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tab_Drink"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <include layout="@layout/tab_drink"/>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bgduoi"
        android:layout_marginTop="30dp"
        android:layout_gravity="bottom"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibtn_check"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/ic_baseline_sms_24"/>
        <TextView
            android:id="@+id/txt_tongGiaTien"
            android:layout_width="wrap_content"
            android:layout_height="51dp"

            android:text="0.000 VNĐ"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="order"
            android:textColor="@color/color_backgroud"
            android:background="@drawable/bggiatien"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>